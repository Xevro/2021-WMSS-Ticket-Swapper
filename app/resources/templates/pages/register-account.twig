{% extends 'layout/main.twig' %}

{% block pageContent %}
    <body class="register">
    {% include 'layout/parts/menubar.twig' %}
    <!-- page content -->
    <div class="content-header title">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-">
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content login_content">
        <div class="right_col" role="main">
            <div class="card card-default">
                <div class="card-header">
                    <h4 class="card-title">Create account</h4>
                </div>
                <div class="login card-body">
                    <a class="hiddenanchor" id="signup"></a>
                    <a class="hiddenanchor" id="signin"></a>
                    <div class="login_wrapper">
                        <div id="register" class="animate form registration_form">
                                <form action="/register" method="post">
                                    <div class="row">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Email Address</label>
                                                <input type="email" class="form-control" placeholder="Email" name="email" value="{{ email }}"/>
                                                {% if errorEmail %}
                                                    <div class="error-message">{{ errorEmail }}</div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group">
                                                <label>First name</label>
                                                <input type="text" class="form-control" placeholder="First name" name="firstname" value="{{ firstname }}"/>
                                                {% if errorFirstName %}
                                                    <div class="error-message">{{ errorFirstName }}</div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group">
                                                <label>Last name</label>
                                                <input type="text" class="form-control" placeholder="Last name" name="lastname" value="{{ lastname }}"/>
                                                {% if errorLastName %}
                                                    <div class="error-message">{{ errorLastName }}</div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group">
                                                <label>Address</label>
                                                <input type="text" class="form-control" placeholder="Address" name="address" value="{{ address }}"/>
                                                {% if errorAddress %}
                                                    <div class="error-message">{{ errorAddress }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <!-- /.card-body -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <label>Password</label>
                                                    <input type="password" class="form-control" placeholder="Password" name="password"/>
                                                    {% if errorPassword %}
                                                        <div class="error-message">{{ errorPassword }}</div>
                                                    {% endif %}
                                                </div>
                                                <div class="form-group">
                                                    <label>Confirm password</label>
                                                    <input type="password" class="form-control" placeholder="Password" name="confirm_password"/>
                                                    {% if errorConfirm %}
                                                        <div class="error-message">{{ errorConfirm }}</div>
                                                    {% endif %}
                                                </div>
                                                <div class="form-group">
                                                    <label>Invite code</label>
                                                    <input type="text" class="form-control" placeholder="Your invite code" name="invitecode" value="{{ invitecode }}"/>
                                                    {% if errorInviteCode %}
                                                        <div class="error-message">{{ errorInviteCode }}</div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <div class="form-group">
                                        <input type="hidden" name="moduleAction" value="register"/>
                                        <button type="submit" value="Register" name="btnRegister" class="primary">Register</button>
                                    </div>
                                    <div class="separator">
                                        <p class="change_link">Already a member? <a href="/login" class="to_register">Log in</a></p>
                                        <br/>
                                    </div>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /page content -->
{% endblock %}