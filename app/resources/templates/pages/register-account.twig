{% extends 'layout/main.twig' %}

{% block pageContent %}
    <body class="register">
    {% include 'layout/parts/menubar.twig' %}
    <!-- page content -->
    <div class="content-header title">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-">
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <div class="right_col" role="main">
            <div class="card card-default">
                <div class="clearfix"></div>
                <div class="login card-body">
                    <a class="hiddenanchor" id="signup"></a>
                    <a class="hiddenanchor" id="signin"></a>
                    <div class="login_wrapper">
                        <div id="register" class="animate form registration_form">
                            <section class="login_content">
                                <form action="/register" method="post">
                                    {% if formErrors['register'] %}
                                        <div class="error">
                                            <p class="red">{{ formErrors['register'] }}</p>
                                        </div>
                                    {% endif %}
                                    <h1>Create Account</h1>
                                    <div class="row">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Email Address</label>
                                                <input type="email" class="form-control" placeholder="Email" name="email" required=""/>
                                                {% if errorName %}
                                                    <div class="error-message">{{ errorName }}</div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group">
                                                <label>First name</label>
                                                <input type="text" class="form-control" placeholder="First name" name="firstname" required=""/>
                                                {% if errorPrice %}
                                                    <div class="error-message">{{ errorPrice }}</div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group">
                                                <label>Last name</label>
                                                <input type="text" class="form-control" placeholder="Last name" name="lastname" required=""/>
                                                {% if errorStartDate %}
                                                    <div class="error-message">{{ errorStartDate }}</div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group">
                                                <label>Address</label>
                                                <input type="text" class="form-control" placeholder="Address" name="address" required=""/>
                                                {% if errorEndDate %}
                                                    <div class="error-message">{{ errorEndDate }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <!-- /.card-body -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="form-group">
                                                    <label>Password</label>
                                                    <input type="password" class="form-control" placeholder="Password" name="password" required=""/>
                                                    {% if errorLocation %}
                                                        <div class="error-message">{{ errorLocation }}</div>
                                                    {% endif %}
                                                </div>
                                                <div class="form-group">
                                                    <label>Confirm password</label>
                                                    <input type="password" class="form-control" placeholder="Password" name="confirm_password" required=""/>
                                                    {% if errorDescription %}
                                                        <div class="error-message">{{ errorDescription }}</div>
                                                    {% endif %}
                                                </div>
                                                <div class="form-group">
                                                    <label>Coupon code</label>
                                                    <input type="text" class="form-control" placeholder="Your invite code" name="invitecode"/>
                                                    {% if errorArtists %}
                                                        <div class="error-message">{{ errorArtists }}</div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <div>
                                        <input type="hidden" name="moduleAction" value="register"/>
                                        <input type="submit" class="btn btn-default submit" value="Register">
                                    </div>
                                    <div class="separator">
                                        <p class="change_link">Already a member? <a href="/login" class="to_register">Log in </a></p>
                                        <br/>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- /page content -->
{% endblock %}