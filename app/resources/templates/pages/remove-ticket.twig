{% extends 'layout/main.twig' %}

{% block pageContent %}
    <body>
    {% include 'layout/parts/menubar.twig' %}

    <!-- page content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-3">
                <div class="col-md-10 offset-md-1">
                    <div class="card-header">
                        <h3>Are you sure you want to delete ticket #{{ ticket.getTicketId() }} - {{ ticket.getTicketName() }}</h3>
                    </div>
                    <div class="card-body download-button">
                        <div class="row">
                            <div class="card-body">
                                <form action="" method="post">
                                    <input type="hidden" name="moduleAction" value="remove"/>
                                    <button type="submit" value="Remove" name="btnRemove" class="primary">Delete ticket</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /page content -->
{% endblock %}