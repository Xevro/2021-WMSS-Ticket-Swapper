{% extends 'layout/main.twig' %}

{% block pageContent %}
    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Company info</h3>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>{{ company.getName() }}</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <dl>

                                <dt>Name</dt>
                                <dd>{{ company.getName() }}</dd>
                                <dt>Address</dt>
                                <dd>{{ company.getAddress() }}</dd>
                                <dt>Zip</dt>
                                <dd>{{ company.getZip() }}</dd>
                                <dt>City</dt>
                                <dd>{{ company.getCity() }}</dd>
                                <dt>VAT</dt>
                                <dd>{{ company.getVat() }}</dd>
                                <dt>Activity</dt>
                                <dd>{{ company.getActivity() }}</dd>
                            </dl>

                        </div>
                        <div class="x_content">
                            <div class="row mb-3">
                                <div class="col-sm-9">
                                    <h4>This is an overview of all the tickets</h4>
                                </div>
                            </div>
                            {% if ticketsModel %}
                            <div class="table-responsive">
                                <table class="table table-striped jambo_table bulk_action">
                                    <thead>
                                    <tr class="headings">
                                        <th>
                                            <input type="checkbox" id="check-all" class="flat">
                                        </th>
                                        <th class="column-title">Name</th>
                                        <th class="column-title">Title</th>
                                        <th class="column-title">Date</th>
                                        <th class="column-title">Short description</th>
                                        <th class="column-title">Long description</th>
                                        <th class="column-title">Desired situation</th>
                                        <th class="column-title">Priority</th>
                                        <th class="column-title">Email</th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions (
                                                <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for ticket in ticketsModel %}
                                    <tr class="{% if loop.index0 % 2 == 0 %}even{% else %}odd{% endif %}> pointer">
                                        <td class="a-center ">
                                            <input type="checkbox" class="flat" name="table_records">
                                        </td>
                                        <td class=" ">{{ ticket.getName() }}</td>
                                        <td class=" ">{{ ticket.getTitle() }}</td>
                                        <td class=" ">{{ ticket.getDate() }}</td>
                                        <td class=" ">{{ ticket.getShortDescription() }}</td>
                                        <td class=" ">{{ ticket.getLongDescription() }}</td>
                                        <td class=" ">{{ ticket.getDesiredSituation() }}</td>
                                        <td class=" ">{{ ticket.getPriority() }}</td>
                                        <td class=" ">{{ ticket.getEmail() }}</td>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            {% else %}
                            <div class="row mb-3">
                                <div class="col-sm-9">
                                    <p>No contacts found matching your request</p>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->
{% endblock %}