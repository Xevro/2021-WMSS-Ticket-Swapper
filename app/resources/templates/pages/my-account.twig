{% extends 'layout/main.twig' %}

{% block pageContent %}
<body>
{% include 'layout/parts/menubar.twig' %}

    <!-- page content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-3">
                <div class="col-md-10 offset-md-1">
                    <div class="list-group eventsBox">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="x_panel">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>{{ firstname }} {{ lastname }}</h2>
                                            <h3></h3>
                                        </div>
                                        <div class="eventlist">
                                            <h2>Your personal information</h2>
                                        </div>
                                        <div class="list-group-item">
                                            <div class="x_content">
                                                <dl>
                                                    <dt>User information</dt>
                                                    <dd>Full name: {{ firstname }} {{ lastname }}</dd>
                                                    <dd>Adress: {{ address }}</dd>
                                                    <dd>Email: {{ email }}</dd>
                                                    <dd>My coupon code: {{ couponcode }}</dd>
                                                    <dd>My number of invites: {{ invite_number }}</dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row mt-3">
                <div class="col-md-10 offset-md-1">
                    <div class="list-group eventsBox">
                        <div class="eventlist">
                            <h2>Your events list</h2>
                        </div>
                        {% if tickets %}
                        {% for ticket in tickets %}
                            <div class="list-group-item" style="padding-left: 100px;">
                                <div class="row">
                                    <div class="col px-4 event-content">
                                        <h3>{{ ticket.getTicketName() }}</h3>
                                        <p>Ticket price: â‚¬{{ ticket.getTicketPrice() }}</p>
                                        <p>Amount of tickets: {{ ticket.getAmount() }}</p>
                                        <p>Reason for sell: {{ ticket.getReasonForSell() }}</p>
                                    </div>
                                    <div class="col px-4 viewbutton">
                                        <div class="float-right" style="position: absolute; right: 10px; bottom: 0;">
                                            <a href="/overview/{{ eventName }}/tickets/{{ ticket.getTicketId() }}" style="color: white; text-decoration: none;" class="button primary">View event ticket</a>
                                            <a href="/overview/{{ eventName }}/tickets/{{ ticket.getTicketId() }}/remove" style="color: white; text-decoration: none;" class="button primary">Remove ticket</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        {% else %}
                            <div class="list-group-item" style="padding-left: 30px;">
                                <div class="col px-4 event-content">
                                    <p>You have no tickets</p>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /page content -->
{% endblock %}