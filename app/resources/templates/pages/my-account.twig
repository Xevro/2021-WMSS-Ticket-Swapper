{% extends 'layout/main.twig' %}

{% block pageContent %}
<body>
{% include 'layout/parts/menubar.twig' %}

    <!-- page content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-3">
                <div class="col-md-10 offset-md-1">
                    <div class="list-group eventsBox">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="x_panel">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>{{ firstname }} {{ lastname }}</h2>
                                            <h3></h3>
                                        </div>
                                        <div class="list-group-item">
                                            <div class="x_content">
                                                <dl>
                                                    <dt>User information</dt>
                                                    <dd>Full name: {{ firstname }} {{ lastname }}</dd>
                                                    <dd>Adress: {{ address }}</dd>
                                                    <dd>Email: {{ email }}</dd>
                                                    <dd>My coupon code: {{ couponcode }}</dd>
                                                    <dd>My number of invites: {{ invite_number }}</dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>













    <!-- /page content -->
{% endblock %}